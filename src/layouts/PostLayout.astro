---
import type { Post } from "../types/post";

import { Image } from "astro:assets";

import BaseLayout from "./Layout.astro";
import PostMeta from "../components/PostMeta.astro";
import { EHeader } from "../types/header";
import { normalizeStrToAmpersand } from "../utils/utils";
import Comments from "../components/Comments/Comments.astro";

interface Props {
    frontmatter: Post;
}

const {
    frontmatter: {
        title,
        image,
        slug,
        destination,
        categories,
        author,
        socials,
        pubDate,
        previewImage,
    },
} = Astro.props;
---

<BaseLayout title={title} headerType={EHeader.CENTERED}>
    <Image
        class="img h-100"
        src={`/${previewImage?.url ?? image.url}`}
        alt={`${previewImage?.alt ?? image.alt}`}
        width="1920"
        height="620"
    />
    <div class="container">
        <article class="article">
            <div class="post-header">
                <a class="ui-post-destination" href="/">{destination}</a>
                <h3 class="ui-post-title m-m f-l">{title}</h3>
                <ul class="categories">
                    {
                        categories.map((category) => (
                            <li class="category">
                                <a
                                    class="ui-post-category"
                                    href={`/category/${category}`}
                                >
                                    {normalizeStrToAmpersand(category)}
                                </a>
                            </li>
                        ))
                    }
                </ul>
            </div>
            <div class="post-body">
                <slot />
            </div>
            <div class="footer">
                <PostMeta
                    author={author}
                    socials={socials ?? []}
                    pubDate={pubDate}
                    categories={categories}
                    commentsCount={0}
                    slug={slug}
                />
            </div>
            <Comments postSlug={slug} />
        </article>
        <!-- <div class="pagination">
                    <div class="prev-post">Prev</div>
                    <div class="next-post">Next</div>
                </div> -->
    </div>
</BaseLayout>

<style>
    .container {
        margin-top: -190px;
    }
    .article {
        margin-bottom: 30px;
        padding: 47px 130px;
        background-color: var(--color-white);
    }
    .img {
        position: relative;
        height: 620px;
        z-index: var(--z-index--1);
    }
    .post-header {
        text-align: center;
        margin-bottom: 26px;
    }
    .categories {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 3px;
    }
    .footer {
        margin-top: 32px;
    }
</style>
