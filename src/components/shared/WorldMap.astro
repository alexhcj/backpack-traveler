---
import { Image } from "astro:assets";

interface Props {
    type?: "grey";
}

const { type } = Astro.props;
const destination = Astro.url.pathname.replace("/posts/", "");
---

<div class={`map ${type}`}>
    <div class="ui-sidebar-title-wrapper">
        <h3 class="ui-sidebar-title bg-line">Where we are now</h3>
    </div>
    <Image
        src={`/world-maps/${destination}.png`}
        width={272}
        height={168}
        alt={`${destination} mark on world map`}
    />
</div>

<style>
    .map {
        text-align: center;

        &.grey {
        }
    }
    .ui-sidebar-title-wrapper {
        margin-bottom: 20px;
    }
    .ui-sidebar-title {
        line-height: 1.8;
    }
</style>
