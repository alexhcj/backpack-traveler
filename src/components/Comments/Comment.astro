---
import { Image } from "astro:assets";
import { render, type CollectionEntry } from "astro:content";
import { convertISODate } from "../../utils/utils";
import defaultAvatar from "../../assets/images/avatars/default-avatar.webp";
import tablerSvg from "../../assets/svg/tabler.svg";
import arrowSvg from "../../assets/svg/arrow.svg";

import CommentForm from "../shared/CommentForm.astro";

interface Props {
    comment: CollectionEntry<"comments">;
    level?: number;
    childrenCount?: number;
    showToggleButton?: boolean;
}

const {
    comment,
    level = 1,
    childrenCount = 0,
    showToggleButton = false,
} = Astro.props;

const { Content } = await render(comment);
const {
    id,
    data: { name, avatar, date, hasReplies, level: commentLevel },
} = comment;

const actualLevel = level || commentLevel || 1;
const avatarAlt = name ? `${name}'s avatar` : "Default user avatar";
const publicAvatarPath = avatar ? `/user-uploads/${avatar}` : null;
const usePublicAvatar = avatar && avatar !== "";
---

<div
    class={`comment level-${actualLevel}`}
    data-comment-id={id}
    data-author-name={name}
    data-author-email={comment.data.email}
>
    {
        hasReplies && actualLevel === 1 && (
            <Image class="icon" src={tablerSvg} alt="Thread indicator" />
        )
    }

    {
        actualLevel >= 3 && (
            <div class="depth-indicator">
                <span class="depth-badge">L{actualLevel}</span>
            </div>
        )
    }

    {
        usePublicAvatar ? (
            <img
                class="avatar"
                src={publicAvatarPath}
                alt={avatarAlt}
                width={96}
                height={96}
                onerror="this.src='/defaults/default-avatar.webp'"
            />
        ) : (
            <Image
                class="avatar"
                src={defaultAvatar}
                alt={avatarAlt}
                width={96}
                height={96}
            />
        )
    }

    <div class="content">
        <div class="meta">
            <h4 class="name">{name}</h4>
            <span class="date">
                {convertISODate(date)}
            </span>
        </div>

        <div class="comment-text">
            <Content />
        </div>

        <div class="actions">
            <button class="btn-reply" data-action="show-reply">
                Reply...
            </button>

            {/* Toggle button for showing/hiding nested comments */}
            {
                showToggleButton && (
                    <div class="thread-toggle">
                        <button
                            class="btn-toggle-thread"
                            data-action="toggle-thread"
                            data-target={id}
                            data-count={childrenCount}
                        >
                            <span class="toggle-text">
                                Show thread ({childrenCount})
                            </span>
                            <Image
                                class="toggle-icon"
                                src={arrowSvg}
                                alt="Thread toggle icon"
                            />
                        </button>
                    </div>
                )
            }
        </div>

        <div class="reply-form-container" data-reply-form>
            <div class="form-header">
                <h3 class="title">Reply to {name}</h3>
                <button class="btn-cancel" data-action="cancel">
                    Cancel reply
                </button>
            </div>
            <CommentForm parentId={id} />
        </div>
    </div>
</div>

<style>
    .comment {
        position: relative;
        display: grid;
        grid-template-columns: 96px 1fr;
        gap: 28px;
        padding: 22px 29px 27px;
        border: 1px solid var(--color-border-2);

        .icon {
            position: absolute;
            bottom: -58px;
            left: 75px;
            width: 25px;
            height: 25px;
        }
    }

    .depth-indicator {
        position: absolute;
        top: 10px;
        right: 10px;
    }

    .depth-badge {
        background: var(--color-accent);
        color: white;
        padding: 2px 6px;
        border-radius: 3px;
        font-size: 10px;
        font-weight: bold;
    }

    .avatar {
        margin-top: 10px;
        width: 96px;
        height: 96px;
        border-radius: 4px;
    }

    .content {
        width: 100%;
    }

    .meta {
        display: flex;
        align-items: center;
        gap: 11px;
        margin-bottom: 7px;
        flex-wrap: wrap;
    }

    .name {
        text-transform: uppercase;
        letter-spacing: var(--letter-spacing-m);
        line-height: 1.57em;
        font-size: 14px;
        font-weight: var(--weight-medium);
        color: var(--color-black);
    }

    .date {
        line-height: 2.1em;
        font-size: 15px;
        font-style: italic;
        color: var(--color-accent);
        font-family: var(--family-lora);
    }

    .comment-text {
        margin-bottom: 20px;

        p {
            margin-bottom: 5px;
            color: var(--color-grey-4);
            font-family: var(--family-lora);
            line-height: 1.6;
        }

        p:last-child {
            margin-bottom: 0;
        }
    }

    .actions {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 15px;
    }

    .actions > :nth-child(2) {
        margin-left: auto;
    }

    .btn-reply {
        text-transform: uppercase;
        letter-spacing: 0.2em;
        font-size: 12px;
        font-weight: var(--weight-medium);
        color: var(--color-black);
        cursor: pointer;
        transition: var(--transition-default);
        border: none;
        background: none;

        &:hover {
            color: var(--color-grey-2);
        }
    }

    .btn-toggle-thread {
        display: flex;
        align-items: center;
        gap: 8px;
        cursor: pointer;
        font-size: 12px;
        color: var(--color-dark);
        transition: var(--transition-default-2s);

        .toggle-icon {
            transition: transform 0.2s ease;
            width: 14px;
            height: 14px;
        }

        &.expanded .toggle-icon {
            transform: rotate(180deg);
        }
    }

    .reply-form-container {
        display: none;
        background: var(--color-light-1);
        border: 1px solid var(--color-border-1);
        border-radius: 4px;
    }

    .form-header {
        display: flex;
        align-items: center;
        gap: 10px;
        margin-bottom: 10px;
    }

    .title {
        text-transform: uppercase;
        letter-spacing: var(--letter-spacing-m);
        line-height: 1.33em;
        font-size: 14px;
        margin: 0;
    }

    .btn-cancel {
        text-transform: uppercase;
        letter-spacing: var(--letter-spacing-m);
        font-size: 12px;
        color: var(--color-accent);
        cursor: pointer;
        transition: var(--transition-default-2);

        &:hover {
            color: var(--color-black);
        }
    }
</style>
