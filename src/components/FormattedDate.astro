---
interface Props {
    date: Date;
    class: string;
}

const { date, class: className, ...rest } = Astro.props;
---

<time datetime={new Date(date).toISOString()} class={className} {...rest}>
    {
        new Date(date).toLocaleDateString("en-us", {
            year: "numeric",
            month: "long",
            day: "numeric",
        })
    }
</time>
