---
import type { ECategory } from "../../types/category";

interface Props {
    title: string;
    slug: string;
    url: string;
    alt: string;
    destination: string;
    categories: ECategory[];
}
const { title, slug, url, alt, destination, categories } = Astro.props;
---

<div class="post">
    <a class="img-box" href={`/posts/${slug}`}>
        <img class="img h-100" src={url} alt={alt} />
    </a>
    <div class="box">
        <a class="destination" href="/">{destination}</a>
        <h4 class="title">{title}</h4>
        <ul class="categories">
            {
                categories.map((category) => (
                    <li>
                        <a
                            class="ui-post-category"
                            href={`/category/${category}`}
                        >
                            {category}
                        </a>
                    </li>
                ))
            }
        </ul>
    </div>
</div>

<style>
    .post {
        display: grid;
        grid-template: 380px 210px / 1fr;
    }
    .img-box {
        display: block;
        overflow: hidden;
        cursor: pointer;

        &:hover .img {
            transform: scale(1.04);
        }
    }
    .box {
        text-align: center;
        border: 1px solid var(--color-border-2);
        border-top: none;
    }
    .destination {
        display: inline-block;
        margin-top: 25px;
        line-height: 1em;
        font-size: 44px;
        font-family: var(--family-epic-ride);
    }
    .title {
        text-transform: uppercase;
        letter-spacing: var(--letter-spacing-m);
        padding: 5px 12% 0px;
        line-height: 1.57em;
        font-size: 14px;
        font-weight: var(--weight-medium);
        color: var(--color-black);
    }
    .categories {
        display: flex;
        justify-content: center;
        gap: 3px;
        margin: 11px 0 35px;
        padding: 0 12%;
    }
    .category {
        letter-spacing: var(--letter-spacing-default);
    }
</style>
